@model IEnumerable<Filmverwaltung.Models.Serie>

@{
    ViewBag.Title = "Serien";
}

<h2>Serien</h2>

<p>
    @Html.ActionLink("Neue Serie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnzStaffeln)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnzEpisoden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produzent.Vorname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnzStaffeln)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnzEpisoden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produzent.Vorname)
        </td>
        <td>
            @Html.ActionLink("Editieren", "Edit", new { id=item.ID_Serie }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Serie }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.ID_Serie })
        </td>
    </tr>
}

</table>
