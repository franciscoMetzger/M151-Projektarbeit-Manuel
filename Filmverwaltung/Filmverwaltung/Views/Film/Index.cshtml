@model IEnumerable<Filmverwaltung.Models.Film>

@{
    ViewBag.Title = "Filme";
}

<h2>Filme</h2>

<p>
    @Html.ActionLink("Neuer Film", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Laenge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produzent.Vorname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Laenge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produzent.Vorname)
        </td>
        <td>
            @Html.ActionLink("Editieren", "Edit", new { id=item.ID_Film }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Film }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.ID_Film })
        </td>
    </tr>
}

</table>
